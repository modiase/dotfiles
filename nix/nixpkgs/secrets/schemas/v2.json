{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "modiase-secrets/v2",
  "type": "object",
  "required": ["schema", "value"],
  "properties": {
    "schema": { "const": "modiase-secrets/v2" },
    "value": { "type": "string" },
    "algo": { "type": ["string", "null"], "description": "Symmetric cipher algorithm" },
    "rounds": { "type": ["integer", "null"], "description": "KDF iteration count" },
    "keyAlgo": { "type": ["string", "null"], "description": "Key derivation function" },
    "salt": { "type": ["string", "null"], "description": "Hex-encoded salt for KDF (16 bytes)" }
  },
  "additionalProperties": false
}
